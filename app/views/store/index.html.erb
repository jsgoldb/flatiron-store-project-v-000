<h2>CATEGORIES</h2>
<% @categories.each do |category| %>
  <h4><%= link_to category.title, category_path(category) %></h4>
<% end %>

<h2>ITEMS</h2>
<% @items.each do |item| %>
  <h6><p><%= item.title %> | <%= number_to_currency(item.price/100) %> | <%= button_to 'Add to Cart', line_items_path(item_id: item) %></p></h6>
<% end %>